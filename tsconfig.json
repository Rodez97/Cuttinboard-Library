{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "dist"]
}
