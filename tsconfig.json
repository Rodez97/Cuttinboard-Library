{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES2020",
    "jsx": "react",
    "lib": ["ES2020", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "exclude": ["dist", "docs", "htw", "test", "__tests__"]
}
